{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["organisationName","user","address", "isHub"],
    "custom":{
        "$.organisationName":"org.name.mandatory",
        "$.address":"address.mandatory",
        "$.isHub":"org.isHub.mandatory",
        "$.user":"user.mandatory",
        "$.address.line1":"address.line1.mandatory",
        "$.address.line2":"address.line2.mandatory",
        "$.user.firstName":"user.firstName.mandatory",
        "$.user.lastName":"user.firstName.mandatory"
       
    },
    "properties": {
        "organisationName": {
            "type": "string",
            "minLength":3,
			"maxLength":6,
            "message": {
                "minLength":"org.name.min.lenght",
                "maxLength":"org.name.max.lenght"
              }
        },
        "isHub": {
            "type": "string",
            "enum": [
              "Y",
              "N"
            ],
            "message": {
                "enum":"is.hub.allowed.values.x.y"
            }
        },
        "user": {
            "type": "object",
            "required": ["firstName", "lastName"],
            "properties": {
                "firstName": {
                    "type": "string",
                    "pattern": "^\\S.*",
                    "message": {
                        "pattern":"no.space.allowed"
                    }
                },
                "lastName": {
                    "type": "string",
                    "pattern": "^\\S.*",
                    "message": {
                        "pattern":"no.space.allowed"
                    }
                }
        
    
    }
        },
        "address": {
            "type": "object",
            "required": ["line1", "line2"],
            "properties": {
                "line1": {
                    "type": "string",
                    "pattern": "^\\S.*",
                    "message": {
                        "pattern":"no.space.allowed"
                    }
                },
                "line2": {
                    "type": "string",
                    "pattern": "^\\S.*",
                    "message": {
                        "pattern":"no.space.allowed"
                    }
                }
        
    
    }
    
        }   
    }
   
}
