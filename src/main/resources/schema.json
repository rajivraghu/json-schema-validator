{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["companyName","companyCode"],
    "custom":{
        "$.companyName":"comp.name.mandatory",
        "$.companyCode":"comp.code.mandatory"

    },
    "properties": {
        "companyName": {
            "type": "string",
            "format":"uuid",
            "message": {
                "format":"not uuid"
              }
        },
        "companyCode": {
            "type": "string",
            "pattern": "^\\S.*",
            "message": {
                "pattern":"No Space allowed"
              }
        }
    }   
}

